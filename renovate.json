{
  "extends": [
    "config:js-app"
  ],
  "labels": ["dependencies", "javascript"],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchPackageNames": ["yarn"],
      "automerge": true,
      "automergeStrategy": "squash"
    },
    {
      "groupName": "dev server packages",
      "matchPackageNames": [
        "concurrently",
        "express",
        "express-ws",
        "graphql-ws",
        "json-server",
        "nodemon"
      ],
      "automerge": true,
      "automergeStrategy": "squash",
      "schedule": ["on the 5th and 20th day of the month"]
    },
    {
      "groupName": "lumino packages",
      "matchPackagePatterns": ["^@lumino/"]
    },
    {
      "groupName": "eslint packages",
      "matchPackageNames": ["standard"],
      "matchPackagePatterns": ["^eslint"],
      "automerge": true,
      "automergeStrategy": "squash",
      "schedule": ["on the first day of the month"]
    },
    {
      "groupName": "tests packages",
      "matchPackageNames": [
        "cross-fetch",
        "jsdom",
        "nyc",
        "sinon"
      ],
      "matchPackagePatterns": [
        "^@?cypress",
        "^@?vitest",
        "coverage",
        "istanbul"
      ],
      "automerge": true,
      "automergeStrategy": "squash",
      "schedule": ["at 18:00 on sunday"]
    }
  ],
  "vulnerabilityAlerts": {
    "addLabels": ["security"]
  }
}
